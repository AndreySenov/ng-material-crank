{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true
  },
  "angularCompilerOptions": {
    "strictMetadataEmit" : true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
